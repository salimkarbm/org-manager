{
    "version": 2,
    "env": {
        "COOKIE_KEY": "@COOKIE_KEY",
        "JWT_SECRET": "@JWT_SECRET",
        "DB_DRIVER": "@DB_DRIVER",
        "DB_HOST": "@DB_HOST",
        "DB_PORT": "@DB_PORT",
        "DB_USERNAME": "@DB_USERNAME",
        "DB_PASSWORD": "@DB_PASSWORD",
        "DB_DATABASE": "@DB_DATABASE"

    },
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH"
            ]
        }
    ]
}